{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('public/css/signin.css') }}">
{% endblock %}

{% block body %}
	<!--Inicio menu-->
	{{ parent() }}

	<!--Inicio BODY-->
	<div class="container">
		<br>

		<!--Slide de fotos-->
    	<div class="cod-md-12">
    		<div id="carousel-1" class="carousel slide" data-ride="carousel">
    			<!--Indicadores-->
    			<ol class="carousel-indicators">
    				<li data-target="#carousel-1" data-slide-to="0" class="active"></li>
    				<li data-target="#carousel-1" data-slide-to="1"></li>
    				<li data-target="#carousel-1" data-slide-to="2"></li>
    				<li data-target="#carousel-1" data-slide-to="3"></li>
    				<li data-target="#carousel-1" data-slide-to="4"></li>
    			</ol>
    			<!--Contnedor de los slides-->
    			<div class="carousel-inner" role="listbox">

    				<div class="item active">
    					<img src="{{ asset('public/images/slides/uno.png') }}"/>
    					<div class="carousel-caption hidden-xs hidden-sm">
    						<h3>{% trans %} Our journey begins  {% endtrans %} </h3>
    						<p>{% trans %} Images of the game {% endtrans %}</p>
    					</div>
    				</div>

    				<div class="item ">
    					<img src="{{ asset('public/images/slides/dos.png') }}"/>
    					<div class="carousel-caption hidden-xs hidden-sm">
    						<h3>{% trans %} Our bridge  {% endtrans %} </h3>
    						<p>{% trans %} Images of the game {% endtrans %}</p>
    					</div>
    				</div>

    				<div class="item">
    					<img src="{{ asset('public/images/slides/tres.png') }}"/>
    					<div class="carousel-caption hidden-xs hidden-sm">
    						<h3>{% trans %} Our fight{% endtrans %}</h3>
    						
    					</div>
    				</div>

    				<div class="item ">
    					<img src="{{ asset('public/images/slides/cuatro.png') }}"/>
    					<div class="carousel-caption hidden-xs hidden-sm">
    						<h3>{% trans %} Our piloting  {% endtrans %} </h3>
    						<p>{% trans %} Images of the game {% endtrans %}</p>
    					</div>
    				</div>

    				<div class="item ">
    					<img src="{{ asset('public/images/slides/cinco.png') }}"/>
    					<div class="carousel-caption hidden-xs hidden-sm">
    						<h3>{% trans %} Our destiny{% endtrans %} </h3>
    						<p>{% trans %} Images of the game {% endtrans %}</p>
    					</div>
    				</div>
    			</div>
    				<!--Controles-->
    			<a href="#carousel-1" class="left carousel-control" role="button" data-slide="prev">
    				<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    				<span class="sr-only" aria-hidden="true">{% trans %} Previous{% endtrans %}</span>
    			</a>
    			<a href="#carousel-1" class="right carousel-control" role="button" data-slide="next">
    				<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    				<span class="sr-only" aria-hidden="true">{% trans %} Next{% endtrans %}</span>
    			</a>
    		</div>
    	</div>
    	<br>
    	<h1>cccccccccccccc</h1>
	</div>
{% endblock %}